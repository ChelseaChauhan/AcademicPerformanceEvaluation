<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/facultybg">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/book" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="300dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register/ Sign Up faculty"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/dark_grey"
                android:textSize="20dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/Username"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/edittextstyle"
                android:backgroundTint="#F5F5F5"
                android:drawableRight="@drawable/person_pink"
                android:ems="10"
                android:hint="Username"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/Password"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Password"
                android:drawableRight="@drawable/lock_pink"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittextstyle"
                android:backgroundTint="#F5F5F5" />

            <EditText
                android:id="@+id/cnfrmPassword"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Confirm Password"
                android:drawableRight="@drawable/lock_pink"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittextstyle"
                android:backgroundTint="#F5F5F5" />

            <Button
                android:id="@+id/signup"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:text="Sign Up"
                android:textSize="18dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/buttoncolor2"
                android:background="@drawable/roundbutton"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="20dp" />

