<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/adminlogback">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginLeft="60dp"
            app:srcCompat="@drawable/apes2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="WELCOME ADMIN"
            android:textColor="#C1CBD4"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/AdminUserid"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/edittextstyle"
            android:backgroundTint="#F5F5F5"
            android:drawableRight="@drawable/person_24"
            android:ems="10"
            android:hint="Admin UserId"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <EditText
            android:id="@+id/AdminPass"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Password"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittextstyle"
            android:backgroundTint="#F5F5F5"
            android:drawableRight="@drawable/lock_24"/>

        <Button
            android:id="@+id/cont"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:text="Continue"
            android:textSize="18dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#416D92"
            android:background="@drawable/roundbutton"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp" />

    </LinearLayout>

</RelativeLayout>
