<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StudentDashboard"
    android:background="@drawable/studentdashbg">


    <LinearLayout
        android:id="@+id/existedlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PERSONAL INFORMATION"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_bold"
            android:textAlignment="center"
            android:layout_marginTop="40dp"/>

        <ImageView
            android:id="@+id/img"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="25dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="30dp">


            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="name"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_bold"
                android:background="@drawable/marksyellowlight"
                android:drawableLeft="@drawable/person_24"
                app:drawableTint="@color/black"
                android:paddingStart="50dp"
                android:paddingEnd="35dp"
                android:paddingTop="2dp"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="enrollment"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginStart="30dp"
                android:background="@drawable/marksyellowlight"
                android:drawableLeft="@drawable/ic_id"
                android:drawableTint="@color/black"
                android:paddingStart="20dp"
                android:paddingTop="2dp"
                android:paddingEnd="20dp"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name"
            android:textAlignment="center"
            android:textColor="#000"
            android:fontFamily="@font/roboto"
            android:padding="5dp"
            android:background="@drawable/studdashgrey" />

        <TextView
            android:id="@+id/textViewRoll"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Enrollment"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textColor="#000"
            android:fontFamily="@font/roboto"
            android:layout_marginStart="30dp"
            android:padding="5dp"
            android:background="@drawable/studdashgrey" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="email"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textColor="#000000"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginTop="20dp"
            android:background="@drawable/marksyellowlight"
            android:drawableLeft="@drawable/email_24"
            android:drawableTint="@color/black"
            android:paddingStart="130dp"
            android:paddingEnd="140dp"
            android:paddingTop="2dp"/>

        <TextView
            android:id="@+id/textViewMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="email"
            android:textAlignment="center"
            android:textColor="#000"
            android:fontFamily="@font/roboto"
            android:padding="5dp"
            android:background="@drawable/studdashgrey" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp">


        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="password"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/roboto_bold"
            android:background="@drawable/studdashyell"
            android:drawableLeft="@drawable/lock_24"
            android:drawableTint="@color/black"
            android:paddingStart="30dp"
            android:paddingTop="2dp"
            android:paddingEnd="25dp"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="phone"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginStart="30dp"
            android:background="@drawable/studdashyell"
            android:drawableLeft="@drawable/phone_24"
            app:drawableTint="@color/black"
            android:paddingStart="40dp"
            android:paddingTop="2dp"
            android:paddingEnd="40dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <TextView
            android:id="@+id/textViewPass"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="password"
            android:textAlignment="center"
            android:textColor="#000"
            android:fontFamily="@font/roboto"
            android:padding="5dp"
            android:background="@drawable/studdashgrey"
            android:onClick="showAlertDialogButtonClicked"/>

        <TextView
            android:id="@+id/textViewPhone"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Phone"
            android:textAlignment="center"
            android:textColor="#000"
            android:fontFamily="@font/roboto"
            android:layout_marginStart="30dp"
            android:padding="5dp"
            android:background="@drawable/studdashgrey"
            android:onClick="showAlertDialogButtonClicked2"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnSeeRecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="get my marksheet"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_bold"
                android:background="@drawable/edittextstyle"
                android:backgroundTint="#75000000"
                android:drawableRight="@drawable/ic_marksheet"
                android:paddingEnd="70dp"
                android:paddingStart="60dp"/>

            <Button
                android:id="@+id/btnSeeProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Progress chart"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_bold"
                android:background="@drawable/edittextstyle"
                android:backgroundTint="#75000000"
                android:drawableRight="@drawable/ic_chart"
                android:paddingEnd="70dp"
                android:paddingStart="60dp"
                android:layout_marginTop="20dp"/>

        </LinearLayout>
    </LinearLayout>

    <!--floating action button-->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/idbackHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:src="@drawable/ic_home"
            app:backgroundTint="@color/dark_grey"
            app:tint="@color/white" />

</RelativeLayout>
